@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SensoreAPPMVC</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header class="mainLogo-Header">
        <img src="~/images/loginMainLogo.png" alt="Sensore Logo" class="mainLogo-Image" />
    </header>

    <div class="wrapper">
        <div class="loginForm" style="max-width: 100%;">
            <h2>Reset Password</h2>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div style="background: #d4edda; color: #155724; border: 1px solid #c3e6cb; padding: 12px; border-radius: 6px; margin-bottom: 16px; font-size: 14px;">
                    @ViewBag.Message
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div style="background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; padding: 12px; border-radius: 6px; margin-bottom: 16px; font-size: 14px;">
                    @ViewBag.Error
                </div>
            }

            <div class="tabs" style="display: flex; gap: 0; border-bottom: 2px solid #e5e7eb; margin-bottom: 24px;">
                <button class="tab-btn active" onclick="switchTab(event, 'email')" style="
                    flex: 1; 
                    padding: 12px; 
                    background: none; 
                    border: none; 
                    cursor: pointer; 
                    color: #999; 
                    font-weight: 600; 
                    border-bottom: 3px solid transparent;
                    margin-bottom: -2px;
                    transition: all 0.3s;
                    font-size: 14px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    gap: 8px;
                ">
                    <i class='bx bx-envelope' style="font-size: 18px;"></i>
                    <span>Email</span>
                </button>
                <button class="tab-btn" onclick="switchTab(event, 'security')" style="
                    flex: 1; 
                    padding: 12px; 
                    background: none; 
                    border: none; 
                    cursor: pointer; 
                    color: #999; 
                    font-weight: 600; 
                    border-bottom: 3px solid transparent;
                    margin-bottom: -2px;
                    transition: all 0.3s;
                    font-size: 14px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    gap: 8px;
                ">
                    <i class='bx bx-shield-lock' style="font-size: 18px;"></i>
                    <span>Security</span>
                </button>
            </div>

            <!-- Email Tab -->
            <div id="email" class="tab-content" style="display: block;">
                <form method="post" action="@Url.Action("ForgotPasswordEmail", "Account")">
                    @Html.AntiForgeryToken()
                    <div class="inputBox">
                        <input type="email" name="email" placeholder="Email" required>
                        <i class='bx bx-envelope'></i>
                    </div>
                    <p style="font-size: 13px; color: #333; margin-bottom: 16px; line-height: 1.6; padding: 12px; background: #f0f4ff; border-radius: 6px; border-left: 4px solid #667eea;">
                        <i class='bx bx-info-circle' style="margin-right: 6px; vertical-align: middle;"></i>
                        An administrator will review your request and contact you shortly to reset your password.
                    </p>
                    <button type="submit" class="btn" style="display: flex; align-items: center; justify-content: center; gap: 8px;">
                        <i class='bx bx-send'></i>
                        <span>Send Request</span>
                    </button>
                </form>
            </div>

            <!-- Security Questions Tab -->
            <div id="security" class="tab-content" style="display: none;">
                <form method="get" action="@Url.Action("ForgotPasswordSecurityQuestions", "Account")">
                    <div class="inputBox">
                        <input type="email" name="email" placeholder="Email" required>
                        <i class='bx bx-user'></i>
                    </div>
                    <p style="font-size: 13px; color: #333; margin-bottom: 16px; line-height: 1.6; padding: 12px; background: #f0f4ff; border-radius: 6px; border-left: 4px solid #667eea;">
                        <i class='bx bx-info-circle' style="margin-right: 6px; vertical-align: middle;"></i>
                        Answer your security questions to verify your identity and reset your password.
                    </p>
                    <button type="submit" class="btn" style="display: flex; align-items: center; justify-content: center; gap: 8px;">
                        <i class='bx bx-check-circle'></i>
                        <span>Continue</span>
                    </button>
                </form>
            </div>

            <div class="rememberForgot" style="text-align: center; margin-top: 16px;">
                <a href="@Url.Action("Login", "Account")" style="display: flex; align-items: center; justify-content: center; gap: 6px;">
                    <i class='bx bx-arrow-back'></i>
                    <span>Back to Login</span>
                </a>
            </div>
        </div>
    </div>

    <div class="footerLogo">
        <img src="~/images/footerLoginIcon.png" alt="Sensore Logo" class="footerLogo-image" />
    </div>

    <script>
        function switchTab(event, tabName) {
            event.preventDefault();
            
            document.querySelectorAll('.tab-content').forEach(tab => tab.style.display = 'none');
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            
            document.getElementById(tabName).style.display = 'block';
            event.target.closest('.tab-btn').classList.add('active');
        }
    </script>
</body>
</html>