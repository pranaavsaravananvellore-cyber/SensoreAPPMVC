@model SensoreAPPMVC.Models.PatientDashboardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Patient Dashboard";
    Layout = null;
    var historyJson = JsonSerializer.Serialize(
        Model.History.Select(h => new {
            date = h.Timestamp.ToString("yyyy-MM-dd"),
            peak = h.PeakPressure,
            contact = h.ContactAreaPercent,
            isHighRisk = h.IsHighRisk
        })
    );
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; }
        body { background: #0f172a; color: #e5e7eb; min-height: 100vh; display: flex; align-items: stretch; }
        .wrapper { max-width: 1200px; margin: 24px auto; padding: 16px; width: 100%; }
        .header { display:flex; justify-content:space-between; align-items:center; margin-bottom:16px; }
        .header-title { font-size:24px; font-weight:600; }
        .header-sub { font-size:14px; color:#9ca3af; }

        .cards { display:grid; grid-template-columns: repeat(auto-fit,minmax(240px,1fr)); gap:16px; margin-bottom:16px; }
        .card { background:#020617; border-radius:16px; border:1px solid #1f2937; padding:16px; box-shadow:0 10px 25px rgba(15,23,42,0.8); }
        .card-header { display:flex; justify-content:space-between; align-items:center; margin-bottom:8px; }
        .card-title { font-size:16px; font-weight:600; }
        .card-sub { font-size:12px; color:#9ca3af; }

        .metric-value { font-size:24px; font-weight:700; margin-top:4px; }
        .metric-label { font-size:12px; color:#9ca3af; }

        .pill { display:inline-flex; align-items:center; gap:6px; font-size:11px; padding:4px 10px; border-radius:999px; }
        .pill-ok { background:rgba(22,163,74,0.15); color:#4ade80; border:1px solid rgba(22,163,74,0.6); }
        .pill-warn { background:rgba(220,38,38,0.1); color:#fca5a5; border:1px solid rgba(220,38,38,0.6); }

        .layout { display:grid; grid-template-columns: minmax(0, 2fr) minmax(0, 1.4fr); gap:16px; align-items:start; }
        .chart-card { height: 340px; }

        .badge { display:inline-block; padding:4px 10px; border-radius:999px; font-size:11px; border:1px solid #1e293b; color:#e5e7eb; }

        .table { width:100%; border-collapse:collapse; font-size:12px; margin-top:8px; }
        .table th, .table td { padding:6px 8px; text-align:left; border-bottom:1px solid #111827; }
        .table th { font-weight:500; color:#9ca3af; }
        .pill-mini { padding:2px 8px; border-radius:999px; font-size:10px; border:1px solid rgba(220,38,38,0.6); color:#fca5a5; background:rgba(220,38,38,0.1); }

        select { background:#020617; border-radius:999px; border:1px solid #1f2937; color:#e5e7eb; padding:6px 10px; font-size:12px; }

    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="wrapper">
        <div class="header">
            <div>
                <div class="header-title">Welcome back, @Model.Name</div>
                <div class="header-sub">
                    Live overview of your pressure distribution and flagged risk events.
                </div>
            </div>
            <div>
                <span class="badge">Period: @Model.SelectedPeriodLabel</span>
            </div>
        </div>

        <div class="cards">
            <div class="card">
                <div class="card-header">
                    <div>
                        <div class="card-title">Current peak pressure</div>
                        <div class="card-sub">Highest value in the most recent pressure map</div>
                    </div>
                </div>
                <div class="metric-value">@Model.CurrentPeakPressure.ToString("F1")</div>
                <div class="metric-label">Peak value (units depend on sensor calibration)</div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div>
                        <div class="card-title">Current contact area</div>
                        <div class="card-sub">Percentage of active (non-zero) cells</div>
                    </div>
                </div>
                <div class="metric-value">@Model.CurrentContactAreaPercent.ToString("F1")%</div>
                <div class="metric-label">Non-zero cells across the latest map</div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div>
                        <div class="card-title">Risk status</div>
                        <div class="card-sub">Automatically flagged when peak exceeds threshold</div>
                    </div>
                </div>
                @if (Model.CurrentIsHighRisk)
                {
                    <div class="pill pill-warn">
                        <span>High-risk region detected</span>
                    </div>
                    <div class="metric-label" style="margin-top:8px;">
                        Peak pressure is above the configured threshold. Please review posture or offload pressure.
                    </div>
                }
                else
                {
                    <div class="pill pill-ok">
                        <span>No high-risk regions detected</span>
                    </div>
                    <div class="metric-label" style="margin-top:8px;">
                        All monitored regions are currently below the high-risk threshold.
                    </div>
                }
            </div>

            <div class="card">
                <div class="card-header">
                    <div>
                        <div class="card-title">Comparison report</div>
                        <div class="card-sub">Current vs previous period averages</div>
                    </div>
                </div>
                <div class="metric-label" style="margin-top:4px;">
                    Peak pressure:
                    <strong>@Model.CurrentAvgPeakPressure.ToString("F1")</strong>
                    vs
                    <strong>@Model.PreviousAvgPeakPressure.ToString("F1")</strong>
                </div>
                <div class="metric-label">
                    Contact area:
                    <strong>@Model.CurrentAvgContactAreaPercent.ToString("F1")%</strong>
                    vs
                    <strong>@Model.PreviousAvgContactAreaPercent.ToString("F1")%</strong>
                </div>
                <div class="metric-label">
                    High-risk events:
                    <strong>@Model.CurrentHighRiskEventCount</strong>
                    vs
                    <strong>@Model.PreviousHighRiskEventCount</strong>
                </div>
            </div>
        </div>

        <div class="layout">
            <div class="card chart-card">
                <div class="card-header">
                    <div>
                        <div class="card-title">Pressure metrics over time</div>
                        <div class="card-sub">Peak pressure and contact area across the selected period</div>
                    </div>
                    <form method="get" asp-controller="Patient" asp-action="Dashboard">
                        <input type="hidden" name="id" value="@Model.PatientId" />
                        <select name="period" onchange="this.form.submit()">
                            <option value="7d">Last 7 days</option>
                            <option value="30d">Last 30 days</option>
                            <option value="all">All data</option>
                        </select>
                    </form>
                </div>
                <canvas id="pressureChart" style="width:100%; height:260px;"></canvas>
            </div>

            <div class="card">
                <div class="card-header">
                    <div>
                        <div class="card-title">Flagged high-pressure events</div>
                        <div class="card-sub">Automatically detected when peak pressure is high</div>
                    </div>
                </div>
                @if (Model.History.Any(h => h.IsHighRisk))
                {
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>Peak</th>
                            <th>Contact area</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var point in Model.History.Where(h => h.IsHighRisk).OrderByDescending(h => h.Timestamp))
                        {
                            <tr>
                                <td>@point.Timestamp.ToString("yyyy-MM-dd")</td>
                                <td>@point.PeakPressure.ToString("F1")</td>
                                <td>@point.ContactAreaPercent.ToString("F1")%</td>
                                <td><span class="pill-mini">High risk</span></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="metric-label" style="margin-top:8px;">
                        No high-pressure events have been detected for the selected period.
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        const history = @Html.Raw(historyJson);

        const ctx = document.getElementById('pressureChart').getContext('2d');

        const labels = history.map(p => p.date);
        const peakData = history.map(p => p.peak);
        const contactData = history.map(p => p.contact);

        const chartConfig = {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Peak pressure',
                        data: peakData,
                        borderWidth: 2,
                        tension: 0.3,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Contact area (%)',
                        data: contactData,
                        borderWidth: 2,
                        borderDash: [4, 4],
                        tension: 0.3,
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: { color: '#e5e7eb', font: { size: 11 } }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#9ca3af', maxRotation: 0, autoSkip: true },
                        grid: { display: false }
                    },
                    y: {
                        position: 'left',
                        ticks: { color: '#9ca3af' },
                        grid: { color: 'rgba(31,41,55,0.6)' }
                    },
                    y1: {
                        position: 'right',
                        ticks: { color: '#9ca3af' },
                        grid: { display: false }
                    }
                }
            }
        };

        if (labels.length > 0) {
            new Chart(ctx, chartConfig);
        }
    </script>
</body>
</html>
