@model List<SensoreAPPMVC.Models.Patient>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Clinician Dashboard";
}

<h2 class="mb-4">Clinician Dashboard</h2>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5>Your Assigned Patients</h5>
    </div>

    <div class="card-body">
        @if (!Model.Any())
        {
            <p>No patients assigned.</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Email</th>
                        <th>View Heatmaps</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Name</td>
                            <td>@p.DOB</td>
                            <td>@p.Email</td>
                            <td>
                                <a class="btn btn-outline-primary"
                                   asp-controller="Clinician"
                                   asp-action="Heatmaps"
                                   asp-route-patientId="@p.UserId">
                                    Open
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
