    <script>
        // Heatmap data generation
        let currentTimeSlider = 50;
        let isPlaying = false;

        const progressData = {
            '1week': [
                { name: 'Week 1', value: 78 },
                { name: 'Week 2', value: 82 },
                { name: 'Week 3', value: 75 }
            ],
            '3months': [
                { name: 'Month 1', value: 68 },
                { name: 'Month 2', value: 72 },
                { name: 'Month 3', value: 79 }
            ],
            '6months': [
                { name: 'Month 1', value: 65 },
                { name: 'Month 2', value: 70 },
                { name: 'Month 3', value: 75 },
                { name: 'Month 4', value: 78 },
                { name: 'Month 5', value: 82 },
                { name: 'Month 6', value: 80 }
            ]
        };

        function generateHeatmapData() {
            const rows = 32;
            const cols = 32;
            const data = [];

            for (let i = 0; i < rows; i++) {
                for (let j = 0; j < cols; j++) {
                    const baseValue = Math.sin(i / rows * Math.PI) * Math.cos(j / cols * Math.PI) * 50 + 50;
                    const timeInfluence = Math.sin((currentTimeSlider / 100) * Math.PI * 2) * 20;
                    const value = Math.max(0, Math.min(100, baseValue + timeInfluence + Math.random() * 10));
                    data.push({
                        x: j,
                        y: i,
                        value: Math.round(value)
                    });
                }
            }

            return data;
        }

        function getHeatmapColor(value) {
            if (value < 20) return '#e0e7ff';
            if (value < 40) return '#c4b5fd';
            if (value < 60) return '#a78bfa';
            if (value < 80) return '#9333ea';
            return '#6b21a8';
        }

        function updateHeatmap() {
            currentTimeSlider = parseInt(document.getElementById('timeSlider').value);
            const heatmapData = generateHeatmapData();
            const container = document.getElementById('heatmapContainer');
            container.innerHTML = '';

            for (let y = 0; y < 32; y++) {
                const row = document.createElement('div');
                row.className = 'heatmap-row';

                for (let x = 0; x < 32; x++) {
                    const cell = heatmapData.find(d => d.x === x && d.y === y);
                    const cellDiv = document.createElement('div');
                    cellDiv.className = 'heatmap-cell';
                    cellDiv.style.backgroundColor = getHeatmapColor(cell?.value || 0);
                    cellDiv.title = `Pressure: ${cell?.value || 0}%`;
                    row.appendChild(cellDiv);
                }

                container.appendChild(row);
            }
        }

        function updateTimelineValue() {
            currentTimeSlider = parseInt(document.getElementById('timeSlider').value);
            document.getElementById('timelineValue').textContent = currentTimeSlider;
            updateHeatmap();
        }

        function togglePlay() {
            isPlaying = !isPlaying;
            const playBtn = document.getElementById('playBtn');
            playBtn.textContent = isPlaying ? '‚è∏' : '‚ñ∂';

            if (isPlaying) {
                const interval = setInterval(() => {
                    let value = parseInt(document.getElementById('timeSlider').value);
                    value = (value + 1) % 101;
                    document.getElementById('timeSlider').value = value;
                    updateTimelineValue();

                    if (!isPlaying) {
                        clearInterval(interval);
                    }
                }, 50);
            }
        }

        function switchProgressTab(tab) {
            // Remove active class from all tabs
            document.querySelectorAll('.progress-tab').forEach(btn => {
                btn.classList.remove('active');
            });

            // Add active class to clicked tab
            event.target.classList.add('active');

            // Update progress list
            const data = progressData[tab];
            const progressList = document.getElementById('progressList');
            progressList.innerHTML = '';

            data.forEach(item => {
                const progressItem = document.createElement('div');
                progressItem.className = 'progress-item';

                const header = document.createElement('div');
                header.className = 'progress-item-header';
                header.innerHTML = `
                    <span class="progress-item-label">${item.name}</span>
                    <span class="progress-item-value">${item.value}% change</span>
                `;

                const content = document.createElement('div');
                content.className = 'progress-item-content';

                const svgCircle = createCircularProgress(item.value);
                const arrow = document.createElement('span');
                arrow.className = 'progress-arrow';
                arrow.textContent = item.value >= 75 ? '‚Üë' : '‚Üì';
                arrow.style.color = item.value >= 75 ? '#10b981' : '#ef4444';

                content.appendChild(svgCircle);
                content.appendChild(arrow);

                progressItem.appendChild(header);
                progressItem.appendChild(content);
                progressList.appendChild(progressItem);
            });
        }

        function createCircularProgress(value) {
            const circumference = 2 * Math.PI * 45;
            const offset = circumference - (value / 100) * circumference;

            const div = document.createElement('div');
            div.className = 'circular-progress';
            div.style.width = '80px';
            div.style.height = '80px';

            const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
            svg.setAttribute('viewBox', '0 0 100 100');

            const bgCircle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
            bgCircle.setAttribute('cx', '50');
            bgCircle.setAttribute('cy', '50');
            bgCircle.setAttribute('r', '45');
            bgCircle.setAttribute('fill', 'none');
            bgCircle.setAttribute('stroke', '#e5e7eb');
            bgCircle.setAttribute('stroke-width', '8');

            const progressCircle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
            progressCircle.setAttribute('cx', '50');
            progressCircle.setAttribute('cy', '50');
            progressCircle.setAttribute('r', '45');
            progressCircle.setAttribute('fill', 'none');
            progressCircle.setAttribute('stroke', '#9333ea');
            progressCircle.setAttribute('stroke-width', '8');
            progressCircle.setAttribute('stroke-dasharray', circumference);
            progressCircle.setAttribute('stroke-dashoffset', offset);
            progressCircle.setAttribute('stroke-linecap', 'round');
            progressCircle.style.transform = 'rotate(-90deg)';
            progressCircle.style.transformOrigin = '50px 50px';

            svg.appendChild(bgCircle);
            svg.appendChild(progressCircle);

            const text = document.createElement('div');
            text.className = 'circular-progress-text';
            text.textContent = value + '%';

            div.appendChild(svg);
            div.appendChild(text);

            return div;
        }

